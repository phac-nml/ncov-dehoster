// Cores
params {
    illumina_threads = 2
    nanopore_threads = 3
}

process {

    // Base processes computational parameters
    cpus = 1
    memory = 4.GB

    // Allow up to 3 retries per process
    errorStrategy = 'retry'
    maxRetries = 3

    withLabel: largecpu {
        cpus = 8
        memory = 32.GB
    }

    withLabel: mediumcpu {
        cpus = 2
        memory = 8.GB
    }

    withLabel: smallcpu {
        cpus = 1
        memory = 4.GB
    }

    withLabel: largeMem {
        cpus = 4
        memory = 64.GB
    }

    withLabel: bwa_composite_index {
        cpus = 2
        memory = 8.GB
    }

    withLabel: bwa_mem {
        cpus = 2
        memory = 12.GB
    }

    withLabel: nanostripper {
        cpus = 10
        memory = 32.GB
    }

    withName: guppyBasecallerCPU {
        cpus = 20
        memory = 64.GB
    }

    withName: regenerateFast5s {
        cpus = 3
        memory = 16.GB
    }

}